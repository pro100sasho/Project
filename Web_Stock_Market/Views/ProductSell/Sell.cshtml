@model Product
@{
    ViewData["Title"] = "Sell";
}

    <h1>Are you sure you want to sell this product?</h1>

    <div>
        <h4>Product</h4>
        <hr />
        <form action="Sell" method="post">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="col-sm-2">
                    How many @Html.DisplayFor(model => model.Name) you want to sell?
                </dt>
                <dd>

                    <input class="form-control" type="text" name="quantity" />
                    <input type="hidden" asp-for="Id" />
                    <button style="margin-top:8px" class="btn btn-primary" type="submit">Sell</button>
                </dd>
            </dl>
        </form>
    </div>
